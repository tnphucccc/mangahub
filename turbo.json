{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**"],
      "env": ["NODE_ENV"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": true
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "generate": {
      "dependsOn": ["^generate"],
      "outputs": ["src/generated.ts", "typescript/generated.ts"],
      "cache": false
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "preview": {
      "cache": false,
      "persistent": true
    },
    "validate": {
      "cache": true,
      "outputs": []
    }
  },
  "globalDependencies": [
    "tsconfig.json",
    ".yarnrc.yml"
  ]
}
